<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CryptoInfo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/white</item>
        <item name="strokeColor">@color/day_stroke</item>
        <item name="fontFamily">@font/alata</item>
        <item name="iconTint">@color/black</item>

        <!-- Typography -->
        <item name="textAppearanceTitleLarge">@style/LargeTitleStyle</item>
        <item name="textAppearanceTitleMedium">@style/MediumTitleStyle</item>
        <item name="textAppearanceTitleSmall">@style/SmallTitleStyle</item>
        <item name="textAppearanceBodyLarge">@style/LargeBodyTextStyle</item>
        <item name="textAppearanceBodyMedium">@style/MediumBodyTextStyle</item>
        <item name="textAppearanceBodySmall">@style/SmallBodyTextStyle</item>

        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="Theme.CryptoInfo" parent="Base.Theme.CryptoInfo" />
</resources>